#!/bin/bash
set -euo pipefail

# Smoke test for Lobsters - https://github.com/lobsters/lobsters

source "$(dirname "$0")/shared.sh"

macos_docker_reexec

setup_packages \
    libyaml-dev \
    libmariadb-dev \
    libsqlite3-dev

setup_rv

[[ -d lobsters ]] || git clone --depth 1 https://github.com/lobsters/lobsters.git
cd lobsters

rv ci

# Check no gems are reinstalled
rv ci > output.txt
grep -v "gems installed to" output.txt || (cat output.txt && exit 1)
grep "gems already installed in" output.txt || (cat output.txt && exit 1)

rv run bundle check

smoke_test_success "lobsters"
